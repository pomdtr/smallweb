{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "addr": {
            "type": "string"
        },
        "domain": {
            "type": "string"
        },
        "dir": {
            "type": "string"
        },
        "email": {
            "type": "string"
        },
        "auth": {
            "enum": [
                "lastlogin",
                "email",
                "google",
                "github",
                "gitlab",
                "facebook"
            ]
        },
        "env": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        }
    }
}
