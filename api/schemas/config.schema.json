{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "addr": {
            "description": "Server address",
            "type": "string"
        },
        "domain": {
            "description": "Domain name",
            "type": "string"
        },
        "dir": {
            "description": "App directory",
            "type": "string"
        },
        "email": {
            "description": "Email address",
            "type": "string"
        },
        "auth": {
            "description": "Authentication method. Leave empty to choose at runtime.",
            "enum": [
                "github",
                "google",
                "gitlab",
                "facebook"
            ]
        }
    }
}
