{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "entrypoint": {
            "type": "string"
        },
        "root": {
            "type": "string"
        },
        "private": {
            "type": "boolean"
        },
        "privateRoutes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "publicRoutes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "manifest": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "$ref": "./manifest.schema.json"
                }
            ]
        },
        "crons": {
            "type": "array",
            "description": "Set of cron jobs",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "schedule",
                    "args"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the cron job"
                    },
                    "description": {
                        "type": "string",
                        "description": "Description of the cron job"
                    },
                    "schedule": {
                        "type": "string",
                        "description": "Cron schedule"
                    },
                    "args": {
                        "type": "array",
                        "description": "Arguments to pass to the script",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
