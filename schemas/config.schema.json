{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "domain": {
            "description": "Domain name",
            "type": "string"
        },
        "customDomains": {
            "description": "Custom domains",
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "email": {
            "description": "Admin email, used for certificate registration",
            "type": "string",
            "format": "email"
        },
        "adminApps": {
            "description": "Admin apps",
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}
