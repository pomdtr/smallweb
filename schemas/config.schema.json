{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "openauth": {
            "type": "object",
            "description": "OpenID Connect configuration",
            "required": [
                "issuer"
            ],
            "properties": {
                "issuer": {
                    "description": "OpenID Connect issuer",
                    "type": "string"
                }
            }
        },
        "domain": {
            "description": "Domain name",
            "type": "string"
        },
        "additionalDomains": {
            "description": "Additional wildcard domains",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "authorizedEmails": {
            "description": "Authorized email addresses",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "authorizedKeys": {
            "description": "Authorized SSH keys",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "apps": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/appConfig"
            }
        }
    },
    "definitions": {
        "appConfig": {
            "type": "object",
            "properties": {
                "admin": {
                    "description": "Give the app admin privileges",
                    "type": "boolean"
                },
                "additionalDomains": {
                    "description": "Additional app domains",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "authorizedEmails": {
                    "description": "Authorized email addresses",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "authorizedKeys": {
                    "description": "Authorized SSH keys",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
