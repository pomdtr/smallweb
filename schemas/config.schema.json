{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "domain"
    ],
    "properties": {
        "domain": {
            "description": "Domain name",
            "type": "string"
        },
        "additionalDomains": {
            "description": "Additional wildcard domains",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "customDomains": {
            "type": "object",
            "description": "Custom domain to app name mapping",
            "patternProperties": {
                "^[a-zA-Z0-9.-]+$": {
                    "type": "string"
                }
            }
        },
        "authorizedKeys": {
            "description": "List of SSH public keys authorized to access the instance",
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}
