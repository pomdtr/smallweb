{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "domain"
    ],
    "properties": {
        "domain": {
            "description": "Domain name",
            "type": "string"
        },
        "additionalDomains": {
            "description": "Additional wildcard domains",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "apps": {
            "description": "Application specific configurations",
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/appConfig"
            }
        }
    },
    "definitions": {
        "appConfig": {
            "type": "object",
            "properties": {
                "env": {
                    "description": "Environment variables for the app",
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "labels": {
                    "description": "Labels for the app",
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "additionalDomains": {
                    "description": "Additional app domains",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "root": {
                    "type": "string"
                },
                "entrypoint": {
                    "type": "string"
                },
                "crons": {
                    "description": "Cron jobs",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "schedule",
                            "args"
                        ],
                        "properties": {
                            "schedule": {
                                "description": "Cron schedule",
                                "type": "string"
                            },
                            "args": {
                                "description": "Cron arguments",
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
