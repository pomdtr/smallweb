{
    "type": "object",
    "required": [
        "domain"
    ],
    "properties": {
        "domain": {
            "description": "Root domain",
            "type": "string"
        },
        "authorizedKeys": {
            "description": "Authorized SSH keys",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "additionalDomains": {
            "description": "Additional domains",
            "type": "object",
            "patternProperties": {
                "^[*.a-zA-Z0-9-]+$": {
                    "type": "string"
                }
            }
        },
        "crons": {
            "description": "Cron jobs",
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "app",
                    "args",
                    "schedule"
                ],
                "properties": {
                    "app": {
                        "description": "App to run the cron job",
                        "type": "string"
                    },
                    "args": {
                        "description": "Cron arguments",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "schedule": {
                        "description": "Cron schedule",
                        "type": "string"
                    }
                }
            }
        }
    }
}
