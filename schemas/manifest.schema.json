{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "entrypoint": {
            "description": "The file that smallweb will run",
            "type": "string"
        },
        "root": {
            "description": "The root directory of the project",
            "type": "string"
        },
        "admin": {
            "description": "Give app read/write access to the whole smallweb folder",
            "type": "string"
        },
        "private": {
            "description": "Protect all routes behind authentication",
            "type": "boolean"
        },
        "privateRoutes": {
            "description": "Make specific routes private",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "publicRoutes": {
            "description": "Make specific routes public",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "crons": {
            "description": "Cron jobs",
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "schedule",
                    "args"
                ],
                "properties": {
                    "schedule": {
                        "description": "Cron schedule",
                        "type": "string"
                    },
                    "args": {
                        "description": "Cron arguments",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "labels": {
            "description": "Labels for the project",
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        }
    }
}
