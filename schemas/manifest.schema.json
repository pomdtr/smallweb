{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "entrypoint": {
            "description": "The file that smallweb will run",
            "type": "string"
        },
        "root": {
            "description": "The root directory of the project",
            "type": "string"
        },
        "crons": {
            "description": "An array of cron jobs",
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "schedule",
                    "args"
                ],
                "properties": {
                    "schedule": {
                        "description": "The cron schedule",
                        "type": "string"
                    },
                    "args": {
                        "description": "An array of arguments to pass to the app cli entrypoint",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "denoArgs": {
            "description": "An array of additional arguments to pass to the deno run/serve command",
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}
