{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "entrypoint": {
            "description": "The file that smallweb will run",
            "type": "string"
        },
        "root": {
            "description": "The root directory of the project",
            "type": "string"
        },
        "crons": {
            "description": "Cron jobs",
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "schedule",
                    "args"
                ],
                "properties": {
                    "schedule": {
                        "description": "Cron schedule",
                        "type": "string"
                    },
                    "args": {
                        "description": "Cron arguments",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "authorizedKeys": {
            "description": "List of SSH public keys authorized to access this app",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "additionalDomains": {
            "description": "Additional domains for the app",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "labels": {
            "description": "Labels for the app",
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        }
    }
}
