{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "entrypoint": {
            "type": "string"
        },
        "root": {
            "type": "string"
        },
        "admin": {
            "type": "boolean"
        },
        "private": {
            "type": "boolean"
        },
        "privateRoutes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "publicRoutes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "crons": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "description",
                    "schedule",
                    "args"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "pattern": "^[a-z][a-z0-9-]+$"
                    },
                    "description": {
                        "type": "string"
                    },
                    "schedule": {
                        "type": "string"
                    },
                    "args": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
