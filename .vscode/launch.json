{
    "configurations": [
        {
            "name": "smallweb up",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "up",
                "--addr=:7777",
                "--ssh-addr=:2222",
                "--enable-crons",
                // "--smtp-addr=:2525",
                // "--log-output=${workspaceFolder}/example/logs/data/smallweb.log"
            ],
            "env": {
                "SMALLWEB_DIR": "${workspaceFolder}/demo",
                "DENO_TLS_CA_STORE": "system",
            },
        },
        {
            "name": "smallweb cli",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "args": [
                "ls"
            ],
            "env": {
                "SMALLWEB_DIR": "${workspaceFolder}/demo",
                "DENO_TLS_CA_STORE": "system",
            },
        }
    ]
}
