{
    "configurations": [
        {
            "name": "smallweb up",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "up",
                "--http-addr=:8080",
                "--ssh-addr=:2222",
            ],
            "env": {
                "SMALLWEB_DIR": "${workspaceFolder}/examples"
            },
        },
        {
            "name": "smallweb cli",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "args": [],
            "env": {
                "SMALLWEB_DIR": "${workspaceFolder}/examples"
            },
        },
        {
            "name": "smallweb.run up",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "up",
                "--ssh-addr=:2222",
            ],
            "env": {
                "SMALLWEB_DIR": "${userHome}/smallweb/smallweb.run",
                "SMALLWEB_DOMAIN": "smallweb.localhost"
            },
        }
    ]
}
