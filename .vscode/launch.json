{
    "configurations": [
        {
            "name": "smallweb up",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "up",
                "--dir=${workspaceFolder}/examples",
                "--domain=smallweb-dev.localhost",
                "--addr=:7777",
                "--ssh-addr=:2222"
            ]
        },
        {
            "name": "smallweb cli",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "args": [
                // your args here
            ],
            "env": {
                "SMALLWEB_DIR": "${workspaceFolder}/examples",
                "SMALLWEB_DOMAIN": "smallweb.localhost"
            },
        }
    ]
}
